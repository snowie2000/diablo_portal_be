{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "diablo:portal_red_creating",
      "basic_render_parameters": {
        "material": "particles_add",
        "texture": "textures/particle/portal_dot_red"
      }
    },
    "components": {
      "minecraft:emitter_rate_steady": {
        "spawn_rate": 150,
        "max_particles": 800
      },
      "minecraft:emitter_lifetime_looping": {
        "active_time": 1
      },
      "minecraft:emitter_shape_point": {
        "offset": [
          0,
          1.5,
          0
        ]
      },
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": 1.5
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          "(variable.particle_random_4 > 0.8) ? 0.03 : 0.012",
          "(variable.particle_random_4 > 0.8) ? 0.03 : 0.012"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 4,
          "texture_height": 4,
          "uv": [
            0,
            0
          ],
          "uv_size": [
            4,
            4
          ]
        }
      },
      "minecraft:particle_motion_parametric": {
        "relative_position": [
          "(math.cos(variable.particle_age * 30 + variable.particle_random_1 * 360) * (0.7 - variable.particle_age * 0.3)) * math.cos(variable.portal_yaw)",
          "math.sin(variable.particle_age * 30 + variable.particle_random_1 * 360) * (1.2 - variable.particle_age * 0.6)",
          "(math.cos(variable.particle_age * 30 + variable.particle_random_1 * 360) * (0.7 - variable.particle_age * 0.3)) * math.sin(variable.portal_yaw)"
        ]
      },
      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "variable.particle_age / variable.particle_lifetime",
          "gradient": [
            [
              0.4,
              0.8,
              1.0,
              1.0
            ],
            [
              0.1,
              0.3,
              0.8,
              0.0
            ]
          ]
        }
      }
    }
  }
}