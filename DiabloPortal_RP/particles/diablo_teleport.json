{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "diablo:teleport",
      "basic_render_parameters": {
        "material": "particles_add",
        "texture": "textures/particle/particles"
      }
    },
    "components": {
      "minecraft:emitter_rate_steady": {
        "spawn_rate": 80,
        "max_particles": 400
      },
      "minecraft:emitter_lifetime_looping": {
        "active_time": 1
      },
      "minecraft:emitter_shape_point": {
        "offset": [0, 0, 0]
      },
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(1.2, 1.8)"
      },
      "minecraft:particle_appearance_billboard": {
        "size": [0.1, 0.4],
        "facing_camera_mode": "rotate_y",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "uv": [0, 0],
          "uv_size": [8, 8]
        }
      },
      "minecraft:particle_motion_parametric": {
        "relative_position": [
          "math.cos(variable.particle_age * 600 + variable.particle_random_1 * 360) * (0.4 + variable.particle_age * 0.5)",
          "variable.particle_age * 1.5",
          "math.sin(variable.particle_age * 600 + variable.particle_random_1 * 360) * (0.4 + variable.particle_age * 0.5)"
        ]
      },
      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "variable.particle_age / variable.particle_lifetime",
          "gradient": [
            [0.1, 0.4, 1.0, 1.0],
            [0.5, 0.1, 0.8, 0.0]
          ]
        }
      }
    }
  }
}